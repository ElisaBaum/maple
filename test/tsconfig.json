{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2015"]
  },
  "include": [
    "specs/**/*",
    "config.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}
